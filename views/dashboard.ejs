<!DOCTYPE html>
<html lang="en">
<head>
<meta charset="UTF-8">
<title>Shopping Dashboard</title>
<meta name="viewport" content="width=device-width, initial-scale=1.0">

<style>
*{
    margin:0;
    padding:0;
    box-sizing:border-box;
    font-family: 'Segoe UI', sans-serif;
}

body{
    display:flex;
    background:#0f172a;
    color:#e2e8f0;
}

/* Sidebar */
.sidebar{
    width:220px;
    height:100vh;
    background:#111827;
    padding:30px 20px;
}

.sidebar h2{
    margin-bottom:40px;
    font-weight:600;
    color:white;
}

.sidebar a{
    display:block;
    margin-bottom:20px;
    text-decoration:none;
    color:#9ca3af;
    font-size:15px;
    transition:0.3s;
}

.sidebar a:hover{
    color:white;
}

/* Main */
.main{
    flex:1;
    padding:30px 40px;
}

/* Topbar */
.topbar{
    display:flex;
    justify-content:space-between;
    align-items:center;
    margin-bottom:30px;
}

.topbar h1{
    font-size:22px;
}

.logout{
    text-decoration:none;
    padding:8px 15px;
    background:#ef4444;
    border-radius:6px;
    color:white;
    font-size:14px;
}

/* Cards */
.cards{
    display:grid;
    grid-template-columns: repeat(auto-fit,minmax(200px,1fr));
    gap:20px;
    margin-bottom:30px;
}

.card{
    background:#1e293b;
    padding:20px;
    border-radius:12px;
}

.card h3{
    font-size:14px;
    color:#94a3b8;
    margin-bottom:10px;
}

.card .value{
    font-size:22px;
    font-weight:600;
}

/* Add Form */
.form-section{
    background:#1e293b;
    padding:20px;
    border-radius:12px;
    margin-bottom:30px;
}

.form-section h3{
    margin-bottom:15px;
}

.form-group{
    display:flex;
    gap:10px;
}

.form-group input{
    flex:1;
    padding:10px;
    border-radius:6px;
    border:none;
    outline:none;
    background:#334155;
    color:white;
}

.form-group button{
    padding:10px 18px;
    border:none;
    border-radius:6px;
    background:#3b82f6;
    color:white;
    cursor:pointer;
}

/* Table */
.table{
    background:#1e293b;
    border-radius:12px;
    padding:20px;
}

table{
    width:100%;
    border-collapse:collapse;
}

th, td{
    padding:12px;
    text-align:left;
}

th{
    color:#94a3b8;
    font-size:14px;
    border-bottom:1px solid #334155;
}

td{
    border-bottom:1px solid #334155;
}

.price{
    color:#22c55e;
    font-weight:500;
}
</style>
</head>
<body>


<div class="main">

    <div class="topbar">
        <h1>Welcome, <%= user %></h1>
        <a href="/logout" class="logout">Logout</a>
    </div>

    <!-- Summary Cards -->
    <div class="cards">
        <div class="card">
            <h3>Total Items</h3>
            <div class="value"><%= tasks.length %></div>
        </div>

        <div class="card">
            <h3>Total Spending</h3>
            <div class="value">
                ₹ <%= tasks.reduce((sum,t)=> sum + Number(t.expense),0) %>
            </div>
        </div>
    </div>

    <!-- Add Item -->
    <div class="form-section">
        <h3>Add New Item</h3>
        <form method="POST" action="/add-task">
            <div class="form-group">
                <input type="text" name="task" placeholder="Product Name" required>
                <input type="number" name="expense" placeholder="Price ₹" required>
                <button>Add</button>
            </div>
        </form>
    </div>

    <!-- Items Table -->
    <div class="table">
        <h3 style="margin-bottom:15px;">Shopping Records</h3>

        <% if(tasks.length === 0){ %>
            <p style="color:#94a3b8;">No items added yet.</p>
        <% } else { %>

        <table>
            <thead>
                <tr>
                    <th>Product</th>
                    <th>Price</th>
                </tr>
            </thead>
            <tbody>
                <% tasks.forEach(t => { %>
                    <tr>
                        <td><%= t.task %></td>
                        <td class="price">₹ <%= t.expense %></td>
                    </tr>
                <% }) %>
            </tbody>
        </table>

        <% } %>
    </div>

</div>

</body>
</html>
